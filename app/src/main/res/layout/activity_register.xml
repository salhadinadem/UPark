<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#800080"
    android:orientation="vertical"
    android:padding="32dp"
    tools:context=".ParkingAddFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="32dp">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="false"
            android:baselineAlignBottom="false"
            android:src="@mipmap/u_park_logo" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:gravity="center"

            android:text="UPark"
            android:textColor="#E8D3A2"
            android:textSize="36dp"
            android:textStyle="bold"
            android:typeface="serif" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <EditText
        android:id="@+id/add_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#E8D3A2"
        android:textColor="#E8D3A2"
        android:hint="@string/enter_your_email_hint"
        android:inputType="textEmailAddress"
        android:textColorHint="#E8D3A2"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/add_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#E8D3A2"
        android:backgroundTint="#E8D3A2"
        android:hint="@string/enter_your_password_hint"
        android:inputType="textPassword"
        android:textColorHint="#E8D3A2"
        android:textSize="24sp" />


    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:layout_margin="16dp"
        android:backgroundTint="#E8D3A2"
        android:text="Register" />

</LinearLayout>
